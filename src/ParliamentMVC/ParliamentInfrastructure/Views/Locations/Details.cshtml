@model ParliamentDomain.Model.Location

@{
    ViewData["Title"] = "Details";
}

<h1>Деталі</h1>

<div>
    <h4>Місце</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Address)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.GoogleMapsLink)
        </dt>
        <dd class = "col-sm-10">
            <a href="@Model.GoogleMapsLink">
                @Html.DisplayFor(model => model.GoogleMapsLink)
            </a>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contact)
        </dt>
        <dd class = "col-sm-10">
            <a asp-controller="Contacts" asp-action="Details" asp-route-id="@Model?.ContactId">
                @Html.DisplayFor(model => model.Contact.Email)
            </a>
        </dd>
        <dt class="col-sm-2">
            Події в цьому місці
        </dt>
        <dd class="col-sm-10">
            <a asp-controller="Events" asp-action="Index" asp-route-locationId="@Model?.Id">
                Перейти
            </a>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Змінити</a> |
    <a asp-action="Index">До переліку місць</a>
</div>
