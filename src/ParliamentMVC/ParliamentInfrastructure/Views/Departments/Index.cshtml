@model IEnumerable<ParliamentDomain.Model.Department>

@{
    ViewData["Title"] = "Index";
}

<h1>Департаменти</h1>

<p>
    <div class="container">
    <a asp-action="Create" class="btn btn-primary">Створити новий департамент</a>
</div>
</p>
<hr/>
<table class="table table-hover">
    <thead>
        <tr class="table-secondary">
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Contact.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contact.Email)
            </td>
            <td>
                <div class="btn-group mb-3">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Змінити</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Детальніше</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Видалити</a>
                </div>
                
            </td>
        </tr>
}
    </tbody>
</table>
