@model IEnumerable<ParliamentDomain.Model.Department>

@{
    ViewData["Title"] = "Departments";
}

<h1>Департаменти</h1>

<p>
    <div class="container">
    <a asp-action="Create" class="btn btn-primary">Створити новий департамент</a>
</div>
</p>
<hr/>
<section id="content-types">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-6 d-flex justify-content-center">
                    @await Component.InvokeAsync("DepartmentCardComponent", new DepartmentCardViewModel(item.Id, item.Name))
                </div>
            }
        </div>
    </div>

</section>