@model IEnumerable<ParliamentDomain.Model.News>

@{
    ViewData["Title"] = "News";
}

<h1>Новини</h1>

<p>
    <div class="container">
        <a asp-action="Create" class="btn btn-primary">Створити новину</a>
    </div>
</p>
<hr/>
<section id="content-types">
    <div class="container">
        <div class="row justify-content-center">
            @foreach (var item in Model)
            {
                <div class="col-md-4 d-flex justify-content-center">
                    @await Component.InvokeAsync("NewsCardComponent", new NewsCardViewModel(item.Id, item.Title, item.Department.Name, item.PublicationDate, item.ShortDescription))
                </div>
            }
        </div>
    </div>

</section>
