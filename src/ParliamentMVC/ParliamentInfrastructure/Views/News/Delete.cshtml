@model ParliamentDomain.Model.News

@{
    ViewData["Title"] = "Delete";
}

<h3>Ви впевненні що хочете видалити цей запис?</h3>

<div>
    <h4>Новина</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-4">
            @Html.DisplayNameFor(model => model.PublisherId)
        </dt>
        <dd class = "col-sm-8">
            @Html.DisplayFor(model => model.PublisherId)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Department.Name)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.PublicationDate)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(model => model.PublicationDate)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>
        <dd class="col-sm-8">
            @Html.Raw(Model.ShortDescription)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-8">
            @Html.Raw(Model.Description)
        </dd>
        
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Видалити" class="btn btn-danger" />
        <a class="btn btn-outline-secondary" href="javascript:void(0);" onclick="window.history.back();">Повернутися</a>
    </form>
</div>
