@model ParliamentInfrastructure.Models.EventCardViewModel
 
<div class="card position-relative" style="width: 80rem;">

    <div class="card-content">
        <div class="card-body">
            <h4 class="card-title row">
                <span>@Model.Title </span>
                <button type="button"
                        onclick="drawChart(@Model.Id, '@Model.Department', @Model.DepartmentId)"
                        data-bs-toggle="modal" data-bs-target="#eventModal"
                        style="border: none; background: transparent; position: absolute; top: 5px; right: 5px; display: block; width: 90px;">
                    <img src="~/lib/images/Statistic-icon.svg" alt="Статистика кількоості подій для департаменту"
                         style="object-fit: fill; max-width: 100%">
                </button>

            </h4>
        </div>

        <div class="card-footer">
            <div class="badges">
                <span class="badge bg-warning">
                    @Model.Department
                </span>
            </div>
            <p />
            <div>
                <h5> Хто може прийти: </h5>
                <p class="text-subtitle text-muted"> @Model.AccessType </p>
            </div>
            <div class="container d-flex justify-content-between">
                <span>
                    @Model.StartTime.ToString()
                </span>
                <div class="btn-group">
                    <a class="btn btn-light-primary" asp-controller="Events" asp-action="Details" asp-route-id="@Model.Id">
                        Детальніше
                    </a>
                    <form method="post" asp-controller="MyEvents" asp-action="WishToGo" asp-route-eventId="@Model.Id">
                        <button type="submit" class="btn btn-primary">
                            Хочу піти
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

