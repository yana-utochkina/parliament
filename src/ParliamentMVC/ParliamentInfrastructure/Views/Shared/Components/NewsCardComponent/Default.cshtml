@model ParliamentInfrastructure.Models.NewsCardViewModel

<div class="card" style="width: 40rem;">
    <div class="card-content">
        <div class="card-body">
            <h4 class="card-title"> @Model.Title </h4>
        </div>
        <div class="card-footer">
            <div>
                @Model.ShortDescription
            </div>
            <p/>
            <div class="row">
                <span class="col-sm-4"> 
                    @Model.PublicationDate.ToShortDateString()
                </span>
                <div class="badges col-sm-4">
                    <span class="badge bg-warning">
                        @Model.Department
                    </span>
                </div>
                <a class="btn btn-light-primary col-sm-4" asp-controller="News" asp-action="Details" asp-route-id="@Model.Id">
                    Читати
                </a>
            </div>
        </div>
    </div>
</div>

